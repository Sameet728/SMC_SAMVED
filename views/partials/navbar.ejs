<script>
  // 1. Mobile Menu Toggle
  function toggleMenu() {
    document.getElementById("mobileMenu").classList.toggle("hidden");
  }

  // 2. AUTOMATIC ACTIVE STATE LOGIC
  document.addEventListener("DOMContentLoaded", () => {
    const currentPath = window.location.pathname;

    // --- STYLE CONFIGURATION ---
    // The classes for an "Active" Pill
    const activeClasses = ["bg-emerald-100", "text-emerald-700", "shadow-sm"];
    // The classes to REMOVE when active (default hover states)
    const inactiveClasses = ["text-slate-600", "hover:text-slate-900", "hover:bg-slate-100"];

    // A. Handle Main Navbar Links
    const navLinks = document.querySelectorAll(".nav-item");
    
    navLinks.forEach(link => {
      // Check if this link is a dropdown button or a direct link
      const href = link.getAttribute("href");
      
      // If it's a direct link
      if (href) {
        if (currentPath === href) {
          link.classList.add(...activeClasses);
          link.classList.remove(...inactiveClasses);
        }
      } 
      // If it's a Dropdown Button (it has no href, but contains text like "Doctors")
      else if (link.classList.contains("dropdown-btn")) {
        const btnText = link.innerText.trim().toLowerCase(); // e.g., "doctors"
        
        // Check if the current URL contains this section (e.g. url is /hospital/doctors/new)
        if (currentPath.includes(`/hospital/${btnText}`)) {
          link.classList.add(...activeClasses);
          link.classList.remove(...inactiveClasses);
        }
      }
    });

    // B. Handle Mobile Menu Links
    const mobileLinks = document.querySelectorAll(".mobile-item");
    mobileLinks.forEach(link => {
      if (link.getAttribute("href") === currentPath) {
        // Different style for mobile active state
        link.classList.add("bg-emerald-50", "text-emerald-700");
        link.classList.remove("text-slate-600", "hover:bg-slate-50");
      }
    });
  });
</script>