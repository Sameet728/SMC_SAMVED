<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-50 antialiased">
<head>
  <meta charset="UTF-8">
  <title>Register | SMC Smart Health</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'sans-serif'] },
          colors: {
            brand: { 50: '#ecfdf5', 100: '#d1fae5', 500: '#10b981', 600: '#059669', 700: '#047857', 900: '#064e3b' }
          },
          animation: {
            'fade-in-down': 'fadeInDown 0.3s ease-out'
          },
          keyframes: {
            fadeInDown: {
              '0%': { opacity: '0', transform: 'translateY(-10px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' },
            }
          }
        }
      }
    }
  </script>
</head>

<body class="min-h-full py-12 px-4 sm:px-6 lg:px-8 relative bg-slate-50">

  <div class="absolute inset-0 z-0 opacity-[0.03] pointer-events-none" 
       style="background-image: radial-gradient(#000 1px, transparent 1px); background-size: 24px 24px;">
  </div>
  
  <div class="relative z-10 max-w-3xl mx-auto">
    
    <div class="text-center mb-8">
      <div class="mx-auto h-12 w-12 bg-gradient-to-br from-brand-500 to-brand-700 rounded-xl flex items-center justify-center shadow-lg shadow-brand-500/30 mb-4">
        <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
      </div>
      <h2 class="text-3xl font-extrabold text-slate-900 tracking-tight">Create an Account</h2>
      <p class="mt-2 text-sm text-slate-600">
        Join the <span class="font-semibold text-brand-600">SMC Smart Health Network</span>
      </p>
    </div>

    <div class="bg-white/80 backdrop-blur-xl rounded-2xl shadow-xl shadow-slate-200/50 border border-white/50 ring-1 ring-slate-900/5 overflow-hidden">
      <div class="p-8">
        
        <form action="/register" method="POST" class="space-y-6">

          <div class="grid grid-cols-1 gap-y-6 gap-x-6 sm:grid-cols-2">
            
            <div class="sm:col-span-2">
              <label class="block text-sm font-semibold text-slate-700 mb-1">Full Name</label>
              <input name="name" type="text" required placeholder="Dr. Rajesh Kumar"
                     class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-300 rounded-lg focus:bg-white focus:ring-2 focus:ring-brand-500 focus:border-brand-500 sm:text-sm transition-all">
            </div>

            <div class="sm:col-span-1">
              <label class="block text-sm font-semibold text-slate-700 mb-1">Email Address</label>
              <input name="email" type="email" required placeholder="admin@hospital.com"
                     class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-300 rounded-lg focus:bg-white focus:ring-2 focus:ring-brand-500 focus:border-brand-500 sm:text-sm transition-all">
            </div>

            <div class="sm:col-span-1">
              <label class="block text-sm font-semibold text-slate-700 mb-1">Password</label>
              <input name="password" type="password" required placeholder="••••••••"
                     class="block w-full px-4 py-2.5 bg-slate-50 border border-slate-300 rounded-lg focus:bg-white focus:ring-2 focus:ring-brand-500 focus:border-brand-500 sm:text-sm transition-all">
            </div>

            <div class="sm:col-span-2">
              <label class="block text-sm font-semibold text-slate-700 mb-1">I am registering as a...</label>
              <div class="relative">
                <select name="role" id="roleSelect" required 
                        class="block w-full pl-4 pr-10 py-3 bg-white border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 sm:text-sm appearance-none transition-all shadow-sm">
                  <option value="" disabled selected>Select Role</option>
                  <option value="citizen">Citizen</option>
                  <option value="hospital">Hospital Administrator</option>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-slate-500">
                  <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
                </div>
              </div>
              <p class="mt-2 text-xs text-slate-500">
                <span class="text-brand-600 font-medium">*Note:</span> Hospital Administrators will need to provide facility details below.
              </p>
            </div>
          </div>

          <div id="hospitalFields" class="hidden animate-fade-in-down">
            
            <div class="relative py-6">
              <div class="absolute inset-0 flex items-center"><div class="w-full border-t border-slate-200"></div></div>
              <div class="relative flex justify-center">
                <span class="px-3 bg-white text-sm font-bold text-slate-400 uppercase tracking-wider">Hospital Profile</span>
              </div>
            </div>

            <div class="bg-slate-50 rounded-xl p-6 border border-slate-200 shadow-inner space-y-6">
              
              <div class="grid grid-cols-1 gap-y-5 gap-x-4 sm:grid-cols-6">
                <div class="sm:col-span-4">
                  <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Hospital Name</label>
                  <input name="hospitalName" type="text" class="block w-full border-slate-300 rounded-md shadow-sm focus:ring-brand-500 focus:border-brand-500 sm:text-sm">
                </div>

                <div class="sm:col-span-2">
                  <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Ward / Zone</label>
                  <input name="ward" type="text" class="block w-full border-slate-300 rounded-md shadow-sm focus:ring-brand-500 focus:border-brand-500 sm:text-sm">
                </div>

                <div class="sm:col-span-6">
                  <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Full Address</label>
                  <input name="address" type="text" class="block w-full border-slate-300 rounded-md shadow-sm focus:ring-brand-500 focus:border-brand-500 sm:text-sm">
                </div>

                <div class="sm:col-span-3">
                  <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Contact Number</label>
                  <input name="contactNumber" type="tel" class="block w-full border-slate-300 rounded-md shadow-sm focus:ring-brand-500 focus:border-brand-500 sm:text-sm">
                </div>
              </div>

              <div class="mt-6">
                <h4 class="text-sm font-bold text-slate-800 mb-4 flex items-center">
                   <span class="w-1.5 h-1.5 bg-brand-500 rounded-full mr-2"></span>
                   Initial Bed Capacity Setup
                </h4>
                
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                  
                  <div class="bg-white p-4 rounded-lg border border-slate-200 shadow-sm hover:shadow-md transition-shadow">
                     <p class="text-xs font-bold text-slate-500 uppercase text-center mb-3 tracking-wide">General Ward</p>
                     <div class="space-y-3">
                        <div class="flex items-center justify-between">
                           <label class="text-xs text-slate-600">Total Beds</label>
                           <input name="generalTotal" type="number" min="0" placeholder="0" class="w-20 text-right border-slate-200 rounded text-sm focus:ring-brand-500 focus:border-brand-500 py-1">
                        </div>
                        <div class="flex items-center justify-between">
                           <label class="text-xs text-emerald-600 font-medium">Available</label>
                           <input name="generalAvailable" type="number" min="0" placeholder="0" class="w-20 text-right bg-emerald-50 border-emerald-200 text-emerald-700 rounded text-sm focus:ring-brand-500 focus:border-brand-500 py-1 font-semibold">
                        </div>
                     </div>
                  </div>

                  <div class="bg-white p-4 rounded-lg border border-slate-200 shadow-sm hover:shadow-md transition-shadow">
                     <p class="text-xs font-bold text-slate-500 uppercase text-center mb-3 tracking-wide">ICU</p>
                     <div class="space-y-3">
                        <div class="flex items-center justify-between">
                           <label class="text-xs text-slate-600">Total Beds</label>
                           <input name="icuTotal" type="number" min="0" placeholder="0" class="w-20 text-right border-slate-200 rounded text-sm focus:ring-brand-500 focus:border-brand-500 py-1">
                        </div>
                        <div class="flex items-center justify-between">
                           <label class="text-xs text-emerald-600 font-medium">Available</label>
                           <input name="icuAvailable" type="number" min="0" placeholder="0" class="w-20 text-right bg-emerald-50 border-emerald-200 text-emerald-700 rounded text-sm focus:ring-brand-500 focus:border-brand-500 py-1 font-semibold">
                        </div>
                     </div>
                  </div>

                  <div class="bg-white p-4 rounded-lg border border-slate-200 shadow-sm hover:shadow-md transition-shadow">
                     <p class="text-xs font-bold text-slate-500 uppercase text-center mb-3 tracking-wide">Isolation</p>
                     <div class="space-y-3">
                        <div class="flex items-center justify-between">
                           <label class="text-xs text-slate-600">Total Beds</label>
                           <input name="isolationTotal" type="number" min="0" placeholder="0" class="w-20 text-right border-slate-200 rounded text-sm focus:ring-brand-500 focus:border-brand-500 py-1">
                        </div>
                        <div class="flex items-center justify-between">
                           <label class="text-xs text-emerald-600 font-medium">Available</label>
                           <input name="isolationAvailable" type="number" min="0" placeholder="0" class="w-20 text-right bg-emerald-50 border-emerald-200 text-emerald-700 rounded text-sm focus:ring-brand-500 focus:border-brand-500 py-1 font-semibold">
                        </div>
                     </div>
                  </div>

                </div>
              </div>
            </div>
          </div>

          <div class="pt-4">
            <button type="submit" 
                    class="w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-md text-sm font-bold text-white bg-slate-900 hover:bg-emerald-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-all duration-200 transform hover:-translate-y-0.5">
              Create Account
            </button>
          </div>

        </form>
      </div>
      
      <div class="bg-slate-50/50 px-8 py-4 border-t border-slate-100 flex justify-center">
        <p class="text-sm text-slate-500">
          Already have an account? <a href="/login" class="font-semibold text-brand-600 hover:text-brand-500 transition-colors">Sign in here</a>
        </p>
      </div>
    </div>
    
    <p class="mt-8 text-center text-xs font-medium text-slate-400">
      &copy; 2025 SMC Smart Health. Secure Registration.
    </p>

  </div>

  <script>
    const roleSelect = document.getElementById("roleSelect");
    const hospitalFields = document.getElementById("hospitalFields");
    
    // Inputs inside the hospital section to toggle 'required' attribute
    const hospitalInputs = hospitalFields.querySelectorAll('input');

    function toggleHospitalFields() {
      if (roleSelect.value === "hospital") {
        hospitalFields.classList.remove("hidden");
        // Make fields required when visible
        hospitalInputs.forEach(input => input.setAttribute('required', ''));
        // Optional: Exclude available beds from required if 0 is acceptable default
      } else {
        hospitalFields.classList.add("hidden");
        // Remove required when hidden to allow form submission for Citizens
        hospitalInputs.forEach(input => input.removeAttribute('required'));
      }
    }

    roleSelect.addEventListener("change", toggleHospitalFields);
  </script>

</body>
</html>