<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-50 antialiased">
<head>
  <meta charset="UTF-8">
  <title>Apply for <%= program.name %> | SMC Smart Health</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'sans-serif'] },
          colors: {
            brand: { 50: '#ecfdf5', 100: '#d1fae5', 500: '#10b981', 600: '#059669', 700: '#047857', 900: '#064e3b' }
          }
        }
      }
    }
  </script>
</head>

<body class="antialiased">
<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 py-8 px-4">
    <div class="max-w-4xl mx-auto">
        
        <% if (existingApplication) { %>
        <!-- Already Applied Message -->
        <div class="bg-emerald-50 border border-emerald-200 rounded-2xl p-6 mb-6">
            <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-emerald-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <h3 class="font-bold text-emerald-900 mb-1">‚úÖ Registration Completed</h3>
                    <p class="text-sm text-emerald-700">You have successfully registered for this program on <%= new Date(existingApplication.applicationDate).toLocaleDateString() %>.</p>
                    <p class="text-sm text-emerald-700 mt-2">You will receive a notification on the program date. Check your notifications section for updates.</p>
                </div>
            </div>
        </div>
        <% } %>
        
        <!-- Program Banner -->
        <div class="mb-8 rounded-2xl overflow-hidden shadow-lg">
            <div class="relative h-64 bg-gradient-to-br from-<%= program.gradientColors.from %> to-<%= program.gradientColors.to %>">
                <div class="absolute inset-0 flex items-center justify-center text-white">
                    <div class="text-center">
                        <svg class="w-20 h-20 mx-auto mb-4 opacity-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <% if (program.type === 'vaccination') { %>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            <% } else { %>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            <% } %>
                        </svg>
                        <h1 class="text-4xl font-bold mb-2"><%= program.name %></h1>
                    </div>
                </div>
            </div>
            <div class="bg-white p-6 border-t-4 border-blue-500">
                <div class="flex items-center justify-between flex-wrap gap-4">
                    <div>
                        <p class="text-sm text-slate-600 mb-1"><strong>Duration:</strong> <%= new Date(program.startDate).toLocaleDateString() %> - <%= new Date(program.endDate).toLocaleDateString() %></p>
                        <p class="text-sm text-slate-600"><strong>Available at:</strong> <%= program.locations %></p>
                    </div>
                    <div class="flex items-center gap-4">
                        <div class="text-center">
                            <p class="text-2xl font-bold text-blue-600"><%= program.enrolled || 0 %></p>
                            <p class="text-xs text-slate-600">Already Enrolled</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Program Details -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6 mb-6">
            <h2 class="text-xl font-bold text-slate-800 mb-4 flex items-center gap-2">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Program Details
            </h2>
            <div class="prose max-w-none text-slate-600">
                <p><%= program.description %></p>
            </div>
        </div>

        <% if (!existingApplication) { %>
        <!-- Application Form -->
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div class="p-6 bg-gradient-to-r from-blue-50 to-indigo-50 border-b border-slate-200">
                <h2 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                    <svg class="w-7 h-7 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Apply for Program
                </h2>
                <p class="text-sm text-slate-600 mt-2">Fill in your details to register for this program</p>
            </div>

            <form id="programApplicationForm" onsubmit="handleFormSubmit(event); return false;" class="p-6">
                <input type="hidden" name="programId" value="<%= program._id %>">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    
                    <!-- Full Name -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Full Name <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            name="fullName"
                            value="<%= citizen ? citizen.fullName : '' %>"
                            placeholder="Enter your full name"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <!-- Date of Birth -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Date of Birth <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="date" 
                            name="dateOfBirth"
                            value="<%= citizen && citizen.dob ? new Date(citizen.dob).toISOString().split('T')[0] : '' %>"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <!-- Gender -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Gender <span class="text-red-500">*</span>
                        </label>
                        <select 
                            name="gender"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        >
                            <option value="">Select gender</option>
                            <option value="male" <%= citizen && citizen.gender === 'Male' ? 'selected' : '' %>>Male</option>
                            <option value="female" <%= citizen && citizen.gender === 'Female' ? 'selected' : '' %>>Female</option>
                            <option value="other" <%= citizen && citizen.gender === 'Other' ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>

                    <!-- Mobile Number -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Mobile Number <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="tel" 
                            name="mobileNumber"
                            value="<%= citizen ? citizen.phone : '' %>"
                            placeholder="+91 9876543210"
                            pattern="[0-9]{10}"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <!-- Email Address -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            name="email"
                            value="<%= citizen && citizen.email ? citizen.email : '' %>"
                            placeholder="your.email@example.com"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <!-- Aadhar Number -->
                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Aadhar Number
                        </label>
                        <input 
                            type="text" 
                            name="aadharNumber"
                            placeholder="XXXX-XXXX-XXXX"
                            pattern="[0-9]{12}"
                            maxlength="12"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <!-- Address Section -->
                    <div class="md:col-span-2">
                        <h3 class="text-lg font-semibold text-slate-800 mb-4 pb-2 border-b border-slate-200">Address Information</h3>
                    </div>

                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Street Address <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            name="street"
                            value="<%= citizen && citizen.address ? citizen.address.street : '' %>"
                            placeholder="House no., Building name, Street"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Area/Locality <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            name="area"
                            placeholder="Area or Locality"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Ward <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            name="ward"
                            value="<%= citizen && citizen.address ? citizen.address.ward : '' %>"
                            placeholder="Ward number or name"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Pincode <span class="text-red-500">*</span>
                        </label>
                        <input 
                            type="text" 
                            name="pincode"
                            value="<%= citizen && citizen.address ? citizen.address.pincode : '' %>"
                            placeholder="6-digit pincode"
                            pattern="[0-9]{6}"
                            maxlength="6"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                            required
                        >
                    </div>

                    <!-- Medical Information Section -->
                    <div class="md:col-span-2">
                        <h3 class="text-lg font-semibold text-slate-800 mb-4 pb-2 border-b border-slate-200 mt-4">Medical Information</h3>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Blood Group
                        </label>
                        <select 
                            name="bloodGroup"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                            <option value="">Select blood group</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="Not Known">Not Known</option>
                        </select>
                    </div>

                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Medical History
                        </label>
                        <textarea 
                            name="medicalHistory"
                            placeholder="Any chronic diseases, past surgeries, etc."
                            rows="2"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                        ></textarea>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Allergies
                        </label>
                        <input 
                            type="text" 
                            name="allergies"
                            placeholder="Any known allergies"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Current Medications
                        </label>
                        <input 
                            type="text" 
                            name="currentMedications"
                            placeholder="Medications you are currently taking"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <div class="md:col-span-2">
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Previous Vaccinations
                        </label>
                        <textarea 
                            name="previousVaccinations"
                            placeholder="List any previous vaccinations related to this program"
                            rows="2"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                        ></textarea>
                    </div>

                    <!-- Program Preferences -->
                    <div class="md:col-span-2">
                        <h3 class="text-lg font-semibold text-slate-800 mb-4 pb-2 border-b border-slate-200 mt-4">Program Preferences</h3>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Preferred Health Center
                        </label>
                        <input 
                            type="text" 
                            name="preferredCenter"
                            placeholder="Preferred center name"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Preferred Date
                        </label>
                        <input 
                            type="date" 
                            name="preferredDate"
                            min="<%= new Date(program.startDate).toISOString().split('T')[0] %>"
                            max="<%= new Date(program.endDate).toISOString().split('T')[0] %>"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <!-- Emergency Contact -->
                    <div class="md:col-span-2">
                        <h3 class="text-lg font-semibold text-slate-800 mb-4 pb-2 border-b border-slate-200 mt-4">Emergency Contact</h3>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Contact Name
                        </label>
                        <input 
                            type="text" 
                            name="emergencyContactName"
                            placeholder="Emergency contact person name"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Relation
                        </label>
                        <input 
                            type="text" 
                            name="emergencyContactRelation"
                            placeholder="Relation with emergency contact"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Contact Phone
                        </label>
                        <input 
                            type="tel" 
                            name="emergencyContactPhone"
                            placeholder="Emergency contact phone"
                            pattern="[0-9]{10}"
                            class="w-full px-4 py-2.5 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        >
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="md:col-span-2 mt-4">
                        <label class="flex items-start">
                            <input type="checkbox" name="terms" class="mt-1 mr-3" required>
                            <span class="text-sm text-slate-700">
                                I hereby confirm that the information provided above is accurate and complete. I understand and agree to the terms and conditions of this program.
                            </span>
                        </label>
                    </div>

                </div>

                <!-- Form Actions -->
                <div class="flex items-center justify-between mt-8 pt-6 border-t border-slate-200">
                    <a 
                        href="/citizen/programs" 
                        class="px-6 py-2.5 border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors"
                    >
                        ‚Üê Back to Programs
                    </a>
                    <button 
                        type="submit"
                        class="px-8 py-2.5 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2 shadow-lg shadow-blue-500/30"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Submit Application
                    </button>
                </div>
            </form>
        </div>

        <!-- Additional Information -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-xl p-5">
            <div class="flex items-start gap-3">
                <svg class="w-6 h-6 text-blue-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <h3 class="font-semibold text-blue-900 mb-2">Important Information</h3>
                    <ul class="text-sm text-blue-800 space-y-1">
                        <li>‚Ä¢ Registration will be completed immediately upon submission</li>
                        <li>‚Ä¢ You will receive a notification on the program date</li>
                        <li>‚Ä¢ Please carry all required documents for verification</li>
                        <li>‚Ä¢ For any queries, contact: <%= program.contactNumber || '9552032489' %></li>
                    </ul>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="text-center">
            <a 
                href="/citizen/programs" 
                class="inline-block px-6 py-2.5 border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors"
            >
                ‚Üê Back to Programs
            </a>
        </div>
        <% } %>

    </div>
</div>

<script>
function handleFormSubmit(e) {
    e.preventDefault();
    e.stopPropagation();
    
    console.log('üöÄ Form submit intercepted');
    
    const form = document.getElementById('programApplicationForm');
    const submitBtn = form.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Submitting...';
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    
    console.log('üì§ Submitting:', data);
    
    fetch('/citizen/program-apply', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(result => {
        console.log('‚úÖ Response:', result);
        
        if (result.success) {
            alert('‚úÖ ' + result.message);
            window.location.href = '/citizen/dashboard#programs';
        } else {
            alert('‚ùå ' + (result.error || 'Failed to submit application'));
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        }
    })
    .catch(error => {
        console.error('‚ùå Error:', error);
        alert('‚ùå An error occurred: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
    });
    
    return false;
}
</script>
</body>
</html>
