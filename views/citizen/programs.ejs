                        <div class="grid grid-cols-2 gap-3 text-sm">
                            <div><span class="text-slate-600">Preferred Center:</span> <strong id="modal-prefCenter" class="text-slate-800"></strong></div>
                            <div><span class="text-slate-600">Preferred Date:</span> <strong id="modal-prefDate" class="text-slate-800"></strong></div>
                        </div>
                    </div>

                    <!-- Emergency Contact -->
                    <div class="bg-white rounded-xl p-5 border border-slate-200">
                        <h3 class="font-bold text-slate-800 mb-3 flex items-center gap-2">
                            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                            </svg>
                            Emergency Contact
                        </h3>
                        <div class="grid grid-cols-2 gap-3 text-sm">
                            <div><span class="text-slate-600">Name:</span> <strong id="modal-emName" class="text-slate-800"></strong></div>
                            <div><span class="text-slate-600">Relation:</span> <strong id="modal-emRelation" class="text-slate-800"></strong></div>
                            <div class="col-span-2"><span class="text-slate-600">Phone:</span> <strong id="modal-emPhone" class="text-slate-800"></strong></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Application Modal Functions
function openApplicationModal(index) {
    const program = window.programsData[index];
    const citizen = <%= citizen ? JSON.stringify({
        fullName: citizen.fullName,
        phone: citizen.phone,
        email: citizen.email,
        dob: citizen.dob,
        gender: citizen.gender,
        address: citizen.address
    }) : 'null' %>;
    
    // Populate program info
    document.getElementById('modalProgramName').textContent = 'Apply for ' + program.name;
    document.getElementById('modalProgramTitle').textContent = program.name;
    document.getElementById('modalProgramDuration').textContent = new Date(program.startDate).toLocaleDateString() + ' - ' + new Date(program.endDate).toLocaleDateString();
    document.getElementById('modalProgramDescription').textContent = program.description;
    document.getElementById('modalContactNumber').textContent = program.contactNumber;
    document.getElementById('formProgramId').value = program.id;
    
    // Set date constraints for preferred date
    document.getElementById('formPrefDate').min = program.startDate;
    document.getElementById('formPrefDate').max = program.endDate;
    
    // Pre-fill citizen data if available
    if (citizen) {
        document.getElementById('formFullName').value = citizen.fullName || '';
        document.getElementById('formMobile').value = citizen.phone || '';
        document.getElementById('formEmail').value = citizen.email || '';
        
        if (citizen.dob) {
            document.getElementById('formDOB').value = new Date(citizen.dob).toISOString().split('T')[0];
        }
        
        if (citizen.gender) {
            const genderSelect = document.getElementById('formGender');
            genderSelect.value = citizen.gender.toLowerCase();
        }
        
        if (citizen.address) {
            document.getElementById('formStreet').value = citizen.address.street || '';
            document.getElementById('formWard').value = citizen.address.ward || '';
            document.getElementById('formPincode').value = citizen.address.pincode || '';
        }
    }
    
    // Show modal
    document.getElementById('applicationModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeApplicationModal() {
    document.getElementById('applicationModal').classList.add('hidden');
    document.body.style.overflow = 'auto';
    document.getElementById('programApplicationForm').reset();
}

// Application Form Submission
function handleModalFormSubmit(e) {
    e.preventDefault();
    e.stopPropagation();
    
    console.log('🚀 Modal form submit intercepted');
    
    const form = document.getElementById('programApplicationForm');
    const submitBtn = form.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Submitting...';
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    
    console.log('📤 Submitting from modal:', data);
    
    fetch('/citizen/program-apply', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(result => {
        console.log('✅ Response:', result);
        
        if (result.success) {
            alert('✅ ' + result.message);
            closeApplicationModal();
            window.location.href = '/citizen/dashboard#programs';
        } else {
            alert('❌ ' + (result.error || 'Failed to submit application'));
            submitBtn.disabled = false;
            submitBtn.innerHTML = originalText;
        }
    })
    .catch(error => {
        console.error('❌ Error:', error);
        alert('❌ An error occurred: ' + error.message);
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
    });
    
    return false;
}


// Details Modal Functions
function viewApplicationDetails(index) {
    const app = window.applicationData[index];
    
    // Populate modal with data
    document.getElementById('modal-program').textContent = app.program;
    document.getElementById('modal-appDate').textContent = app.applicationDate;
    document.getElementById('modal-appId').textContent = '#' + app.id.slice(-8).toUpperCase();
    
    document.getElementById('modal-fullName').textContent = app.fullName;
    document.getElementById('modal-dob').textContent = app.dateOfBirth;
    document.getElementById('modal-age').textContent = app.age + ' years';
    document.getElementById('modal-gender').textContent = app.gender;
    document.getElementById('modal-mobile').textContent = app.mobileNumber;
    document.getElementById('modal-email').textContent = app.email;
    document.getElementById('modal-aadhar').textContent = app.aadharNumber;
    document.getElementById('modal-blood').textContent = app.bloodGroup;
    
    document.getElementById('modal-street').textContent = app.address.street;
    document.getElementById('modal-area').textContent = app.address.area;
    document.getElementById('modal-ward').textContent = app.address.ward;
    document.getElementById('modal-pincode').textContent = app.address.pincode;
    
    document.getElementById('modal-medHistory').textContent = app.medicalHistory;
    document.getElementById('modal-allergies').textContent = app.allergies;
    document.getElementById('modal-medications').textContent = app.currentMedications;
    document.getElementById('modal-vaccinations').textContent = app.previousVaccinations;
    
    document.getElementById('modal-prefCenter').textContent = app.preferredCenter;
    document.getElementById('modal-prefDate').textContent = app.preferredDate;
    
    document.getElementById('modal-emName').textContent = app.emergencyContact.name;
    document.getElementById('modal-emRelation').textContent = app.emergencyContact.relation;
    document.getElementById('modal-emPhone').textContent = app.emergencyContact.phone;
    
    // Show modal
    document.getElementById('detailsModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeDetailsModal() {
    document.getElementById('detailsModal').classList.add('hidden');
    document.body.style.overflow = 'auto';
}

// Close modal on escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        closeDetailsModal();
        closeApplicationModal();
    }
});

// Close details modal on background click
document.getElementById('detailsModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
        closeDetailsModal();
    }
});

// Close application modal on background click
document.getElementById('applicationModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
        closeApplicationModal();
    }
});
</script>

