  <style>
    .smc-header-bg {
      background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
    }
  </style>
</head>

<body class="antialiased bg-slate-50">

<!-- Main Header -->
<header class="bg-white shadow-md">
  <div class="w-full px-6 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo Section -->
      <div class="flex items-center gap-4">
        <img src="/web-Main-SMC-Logo-PNG.png" alt="SMC Logo" class="h-16 w-16 object-contain">
        <div>
          <h1 class="text-xl md:text-2xl font-bold text-smc-primary">Solapur Municipal Corporation</h1>
          <p class="text-sm text-gray-500">Smart Health Portal</p>
        </div>
      </div>
      
      <!-- Action Buttons -->
      <div class="hidden md:flex items-center gap-2">
        <a href="/citizen/dashboard" class="flex flex-col items-center p-3 border border-gray-300 rounded-lg bg-smc-50 hover:border-smc-primary hover:bg-smc-100 transition-colors cursor-pointer">
          <svg class="w-5 h-5 text-smc-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
          <span class="text-xs text-gray-600 mt-1"><%= user.name || 'Citizen' %></span>
        </a>
        <a href="/logout" class="flex flex-col items-center p-3 border border-gray-300 rounded-lg hover:border-red-500 hover:bg-red-50 transition-colors">
          <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
          <span class="text-xs text-gray-600 mt-1">Logout</span>
        </a>
        <img src="/Seal_of_Maharashtra.png" alt="Maharashtra Seal" class="h-14 w-14 object-contain ml-2">
      </div>
    </div>
  </div>
</header>

