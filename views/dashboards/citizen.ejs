    let statusCounts = { normal: 0, moderate: 0, critical: 0, outbreak: 0, core: 0, industrial: 0 };
    
    // Check for outbreak areas
    const outbreakWards = outbreaks.map(o => o.location || 'Unknown').filter(loc => loc !== 'Unknown');
    
    // Process each zone
    Object.entries(sollapurZones).forEach(([zoneKey, zoneData]) => {
      // Skip zone if filter is active and doesn't match
      if (currentZoneFilter !== 'all' && currentZoneFilter !== zoneKey) {
        return;
