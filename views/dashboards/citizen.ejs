          'Hotgi Road Area': [17.6412, 75.9365],
          'Konark Nagar': [17.6469, 75.9298],
          'Datta Nagar': [17.6498, 75.9214]
        }
      },
      'south': {
        name: 'üü£ South & South-West Areas',
        color: '#a855f7',
        areas: {
          'Vijapur Road Area': [17.6264, 75.8963],
          'Jule Solapur': [17.6218, 75.9054],
          'Jule MIDC': [17.6125, 75.9168],
          'Walchand Nagar Side': [17.6172, 75.8894],
          'Majrewadi': [17.6046, 75.8817]
