  // Section Navigation
  function showSection(section) {
    // Hide all sections
    document.querySelectorAll('.section-content').forEach(s => s.classList.add('hidden'));
    
    // Show selected section
    const targetSection = document.getElementById('section-' + section);
    if (targetSection) {
      targetSection.classList.remove('hidden');
    }
    
    // Update navigation active state
    const navLink = document.querySelector(`[href="#${section}"]`);
    if (navLink) {
      setActiveNav(navLink);
    }
    
    // Initialize map if map section
    if (section === 'map') {
      initMap();
    }
    
    // Reinitialize charts if analytics section
    if (section === 'analytics') {
      setTimeout(() => {
        // Reset flag to allow reinitializing charts
        chartsInitialized = false;
        // Destroy and recreate charts
        initCharts();
      }, 150);
    }
    
    // Scroll to top
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  // Map Initialization
  let map = null;
  let mapMarkers = [];
  let currentFilter = 'all';
  
  function initMap() {
    if (map) return;
    
    // Solapur coordinates
    map = L.map('map').setView([17.6599, 75.9064], 12);
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '¬© OpenStreetMap contributors'
    }).addTo(map);

    // Initialize map markers and legend
    updateMapMarkers();
    
    // Setup filter handler
    const mapFilter = document.getElementById('mapFilter');
    if (mapFilter) {
      mapFilter.addEventListener('change', function() {
        currentFilter = this.value;
        updateMapMarkers();
      });
    }
  }
  
  function updateMapMarkers() {
    // Clear existing markers
    mapMarkers.forEach(marker => map.removeLayer(marker));
    mapMarkers = [];
    
    const hospitals = <%- JSON.stringify(hospitals) %>;
    const wardData = <%- JSON.stringify(wardData) %>;
    const outbreaks = <%- JSON.stringify(outbreaks) %>;
    
    // Sample coordinates for Solapur wards
    const wardCoords = {
      'Ward A': [17.6699, 75.9164],
      'Ward B': [17.6599, 75.9264],
      'Ward C': [17.6499, 75.8964],
      'Ward D': [17.6799, 75.8864],
      'Ward E': [17.6399, 75.9364],
      'Central': [17.6599, 75.9064]
    };
    
    // Count different status types
    let statusCounts = { normal: 0, moderate: 0, critical: 0, outbreak: 0 };
    
    // Check for outbreak areas
    const outbreakWards = outbreaks.map(o => o.location || 'Unknown').filter(loc => loc !== 'Unknown');
    
    // Add markers based on current filter
    Object.entries(wardData).forEach(([ward, data]) => {
      const coords = wardCoords[ward] || [17.6599 + (Math.random() - 0.5) * 0.05, 75.9064 + (Math.random() - 0.5) * 0.05];
      
      // Calculate metrics based on filter
      let showMarker = false;
      let color = '#10b981'; // Default green
      let status = 'normal';
      let popupContent = '';
      
      // Check if ward has outbreak
      const hasOutbreak = outbreakWards.some(outbreakWard => 
        ward.toLowerCase().includes(outbreakWard.toLowerCase()) || 
        outbreakWard.toLowerCase().includes(ward.toLowerCase())
      );
      
      if (hasOutbreak) {
        status = 'outbreak';
        color = '#8b5cf6';
        statusCounts.outbreak++;
      } else {
        const occupancy = data.totalBeds > 0 ? ((data.totalBeds - data.availableBeds) / data.totalBeds * 100) : 0;
        const diseaseLoad = data.patients || 0;
        
        if (currentFilter === 'all' || currentFilter === 'beds') {
          if (occupancy >= 80) {
            status = 'critical';
            color = '#ef4444';
            statusCounts.critical++;
          } else if (occupancy >= 60) {
            status = 'moderate';
            color = '#f59e0b';
            statusCounts.moderate++;
          } else {
            status = 'normal';
            color = '#10b981';
            statusCounts.normal++;
          }
          showMarker = true;
        }
        
        if (currentFilter === 'disease') {
          if (diseaseLoad > 50) {
            status = 'critical';
            color = '#ef4444';
            statusCounts.critical++;
          } else if (diseaseLoad > 20) {
            status = 'moderate';
            color = '#f59e0b';
            statusCounts.moderate++;
          } else {
            status = 'normal';
            color = '#10b981';
            statusCounts.normal++;
          }
          showMarker = true;
        }
        
        if (currentFilter === 'hospital') {
          const hospitalCount = data.hospitals || 0;
          if (hospitalCount >= 3) {
            status = 'normal';
            color = '#10b981';
            statusCounts.normal++;
          } else if (hospitalCount >= 1) {
            status = 'moderate';
            color = '#f59e0b';
            statusCounts.moderate++;
          } else {
            status = 'critical';
            color = '#ef4444';
            statusCounts.critical++;
          }
          showMarker = true;
        }
        
        if (currentFilter === 'all') {
          showMarker = true;
        }
      }
      
      if (showMarker) {
        // Create popup content based on filter
        if (currentFilter === 'beds' || currentFilter === 'all') {
          const occupancy = data.totalBeds > 0 ? ((data.totalBeds - data.availableBeds) / data.totalBeds * 100) : 0;
          popupContent = `
            <div class="p-3">
              <h4 class="font-bold text-lg mb-2">${ward || 'Unknown Ward'}</h4>
              <div class="space-y-2">
                <p><strong>üè• Hospitals:</strong> ${data.hospitals}</p>
                <p><strong>üõèÔ∏è Beds:</strong> ${data.availableBeds}/${data.totalBeds} available</p>
                <p><strong>üìä Occupancy:</strong> ${occupancy.toFixed(1)}%</p>
                <p><strong>üë• Patients:</strong> ${data.patients}</p>
                ${hasOutbreak ? '<p class="text-red-600 font-semibold">‚ö†Ô∏è Active Outbreak Zone</p>' : ''}
              </div>
            </div>
          `;
        } else if (currentFilter === 'disease') {
          popupContent = `
            <div class="p-3">
