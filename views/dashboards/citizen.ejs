  let currentFilter = 'all';
  let currentZoneFilter = 'all';
  let heatmapLayers = [];
  
  function initMap() {
    if (map) return;
    
    // Solapur coordinates
    map = L.map('map').setView([17.6599, 75.9064], 12);
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
