          if (diseaseLoad > 50) {
            status = 'critical';
            color = '#ef4444';
            statusCounts.critical++;
          } else if (diseaseLoad > 20) {
            status = 'moderate';
            color = '#f59e0b';
            statusCounts.moderate++;
          } else {
            status = 'normal';
            color = '#10b981';
            statusCounts.normal++;
          }
          showMarker = true;
