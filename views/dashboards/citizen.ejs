                    hospital.medicines.forEach(med => {
                      const stock = parseInt(med.stock) || 0;
                      const minLevel = parseInt(med.minLevel) || 10;
                      if (stock <= 0) {
                        hospitalCriticalMedicines++;
                      } else if (stock <= minLevel) {
                        hospitalLowStockMedicines++;
                      }
                    });
                  }
                  // Fallback: use medicine alert counts if available
                  if (hospital.criticalMedicineAlerts) hospitalCriticalMedicines += hospital.criticalMedicineAlerts;
                  if (hospital.lowStockMedicines) hospitalLowStockMedicines += hospital.lowStockMedicines;
