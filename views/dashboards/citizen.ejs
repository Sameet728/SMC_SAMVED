  <script>
    // Define critical functions early to prevent "not defined" errors
    function showSection(section) {
      // Hide all sections
      document.querySelectorAll('.section-content').forEach(s => s.classList.add('hidden'));
      
      // Show selected section
      const targetSection = document.getElementById('section-' + section);
      if (targetSection) {
        targetSection.classList.remove('hidden');
      }
      
      // Update navigation active state
      const navLink = document.querySelector(`[href="#${section}"]`);
      if (navLink) {
        setActiveNav(navLink);
      }
      
      // Initialize map if map section
      if (section === 'map' && typeof initMap === 'function') {
        initMap();
      }
      
      // Reinitialize charts if analytics section
      if (section === 'analytics' && typeof initCharts === 'function') {
        setTimeout(() => {
          // Reset flag to allow reinitializing charts
          if (typeof chartsInitialized !== 'undefined') {
            chartsInitialized = false;
          }
          // Destroy and recreate charts
          initCharts();
        }, 150);
      }
      
      // Scroll to top
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    
    // Set active navigation item
    function setActiveNav(element) {
      document.querySelectorAll('.nav-item').forEach(item => {
        item.classList.remove('active');
        item.style.borderBottom = '3px solid transparent';
      });
      if (element) {
        element.classList.add('active');
        element.style.borderBottom = '3px solid #f39c12';
      }
    }
  </script>

