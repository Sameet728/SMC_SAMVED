      // Enhanced search - check name, address, and ward
      const matchesSearch = !searchTerm || 
        name.includes(searchTerm) || 
        address.includes(searchTerm) ||
        ward.toLowerCase().includes(searchTerm);
      
      const matchesWard = !selectedWard || ward === selectedWard;
      
      const shouldShow = matchesSearch && matchesWard;
      
      if (shouldShow) {
        row.style.display = '';
        row.classList.add('animate-fade-in-up');
        visibleCount++;
      } else {
        row.style.display = 'none';
        row.classList.remove('animate-fade-in-up');
      }
    });
    
    // Show/hide no results message
    if (noHospitalsMessage) {
