            status = 'normal';
            color = '#10b981';
            statusCounts.normal++;
          } else if (hospitalCount >= 1) {
            status = 'moderate';
            color = '#f59e0b';
            statusCounts.moderate++;
          } else {
            status = 'critical';
            color = '#ef4444';
            statusCounts.critical++;
          }
          showMarker = true;
        }
        
        if (currentFilter === 'all') {
          showMarker = true;
        }
      }
      
