      tbody.innerHTML = vaccinationRecords.map(record => {
        const statusClass = record.status === 'Completed' ? 'bg-green-100 text-green-700' 
          : record.status === 'Overdue' ? 'bg-red-100 text-red-700'
          : record.status === 'Due Soon' ? 'bg-yellow-100 text-yellow-700'
