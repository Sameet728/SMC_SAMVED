        if (currentFilter === 'beds' || currentFilter === 'all') {
          const occupancy = areaData.totalBeds > 0 ? ((areaData.totalBeds - areaData.availableBeds) / areaData.totalBeds * 100) : 0;
          const hospitalList = areaData.hospitalDetails ? 
