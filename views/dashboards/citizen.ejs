  // Function to calculate real health data from actual hospitals in the area
  function calculateRealAreaData(nearbyHospitals, areaName, zoneKey) {
    if (nearbyHospitals.length === 0) {
      return {
        hospitals: 0,
        totalBeds: 0,
        availableBeds: 0,
        patients: 0,
        hasData: false
      };
    }
    
    let totalBeds = 0;
    let availableBeds = 0;
    let totalPatients = 0;
    
    nearbyHospitals.forEach(hospital => {
      // Use actual hospital bed data or reasonable defaults
      const hospitalBeds = hospital.totalBeds || hospital.beds || 50;
      const occupancyRate = hospital.occupancyRate || 0.7; // 70% default occupancy
      const occupied = Math.floor(hospitalBeds * occupancyRate);
      
      totalBeds += hospitalBeds;
      availableBeds += (hospitalBeds - occupied);
      totalPatients += occupied;
    });
    
    return {
      hospitals: nearbyHospitals.length,
      totalBeds: totalBeds,
      availableBeds: Math.max(0, availableBeds),
      patients: totalPatients,
      hasData: true,
      hospitalDetails: nearbyHospitals
    };
  }
  
  // Function to calculate distance between two coordinates (in km)
  function calculateDistance(lat1, lon1, lat2, lon2) {
    const R = 6371; // Radius of the Earth in km
    const dLat = (lat2 - lat1) * Math.PI / 180;
    const dLon = (lon2 - lon1) * Math.PI / 180;
    const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
      Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
      Math.sin(dLon/2) * Math.sin(dLon/2);
    const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
    return R * c;
  }
  
