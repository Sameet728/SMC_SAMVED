  // Update vaccination UI
  function updateVaccinationUI() {
    const tbody = document.getElementById('vaccinationRecords');
    const today = new Date();
    
    let completed = 0, dueSoon = 0, overdue = 0;
    
    // Count statuses
    vaccinationRecords.forEach(record => {
      if (record.status === 'Completed') completed++;
      else if (record.status === 'Due Soon') dueSoon++;
      else if (record.status === 'Overdue') overdue++;
      else if (record.nextDueDate) {
        const dueDate = new Date(record.nextDueDate);
        const daysUntilDue = Math.ceil((dueDate - today) / (1000 * 60 * 60 * 24));
        if (daysUntilDue < 0) overdue++;
        else if (daysUntilDue <= 30) dueSoon++;
      }
    });
    
    // Update summary cards
    document.getElementById('completedVaccines').textContent = completed;
    document.getElementById('dueSoonVaccines').textContent = dueSoon;
    document.getElementById('overdueVaccines').textContent = overdue;
    
    // Update table based on records
