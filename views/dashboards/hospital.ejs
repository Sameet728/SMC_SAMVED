    <script>
        const opdSection = document.getElementById("opdSection");
        const ipdSection = document.getElementById("ipdSection");
        const appointmentsSection = document.getElementById("appointmentsSection");
        const btnOpd = document.getElementById("btnOpd");
        const btnIpd = document.getElementById("btnIpd");
        const btnAppointments = document.getElementById("btnAppointments");
        const opdFilters = document.getElementById("opdFilters");
        const ipdFilters = document.getElementById("ipdFilters");
        const appointmentFilters = document.getElementById("appointmentFilters");

        function switchTab(tab) {
            if (tab === 'opd') showOPD();
            else if (tab === 'ipd') showIPD();
            else if (tab === 'appointments') showAppointments();
        }

        function resetAllTabs() {
            opdSection.style.display = "none";
            ipdSection.style.display = "none";
            appointmentsSection.style.display = "none";
            opdFilters.style.display = "none";
            ipdFilters.style.display = "none";
            appointmentFilters.style.display = "none";

            // Reset buttons
            [btnOpd, btnIpd, btnAppointments].forEach(btn => {
                btn.classList.remove("tab-active", "text-slate-900", "bg-white", "shadow-sm");
                btn.classList.add("tab-inactive");
            });
        }

        function showOPD() {
            resetAllTabs();
            opdSection.style.display = "block";
            opdFilters.style.display = "flex";
            btnOpd.classList.remove("tab-inactive");
            btnOpd.classList.add("tab-active");
            filterOPD("today");
        }

        function showIPD() {
            resetAllTabs();
            ipdSection.style.display = "block";
            ipdFilters.style.display = "flex";
            btnIpd.classList.remove("tab-inactive");
            btnIpd.classList.add("tab-active");
            filterIPD("admitted");
        }

        function showAppointments() {
            resetAllTabs();
            appointmentsSection.style.display = "block";
            appointmentFilters.style.display = "flex";
            btnAppointments.classList.remove("tab-inactive");
            btnAppointments.classList.add("tab-active");
            filterAppointments("all");
        }

        function filterAppointments(type) {
            document.querySelectorAll("#appointmentsTable tr").forEach(r => {
                if (!r.dataset.status) return;
                r.style.display = type === "all" || r.dataset.status === type ? "" : "none";
            });
        }

        function filterOPD(type) {
            const rows = document.querySelectorAll("#opdTable tr");
            const today = new Date().toISOString().slice(0, 10);
            const yesterday = new Date(Date.now() - 86400000).toISOString().slice(0, 10);
            const selected = document.getElementById("opdDate").value;

            rows.forEach(r => {
                const d = r.dataset.date;
                r.style.display =
                    (type === "today" && d === today) ||
                    (type === "yesterday" && d === yesterday) ||
                    (type === "date" && d === selected)
                    ? "" : "none";
            });
        }

        function filterIPD(type) {
            document.querySelectorAll("#ipdTable tr").forEach(r => {
                r.style.display =
                    type === "all" || r.dataset.status === type ? "" : "none";
            });
        }

        function exportCSV(tableId, filename) {
            let csv = [];
            document.querySelectorAll(`#${tableId} tr`).forEach(row => {
                if (row.style.display === "none") return;
                let cols = Array.from(row.children).map(td => `"${td.innerText.replace(/(\r\n|\n|\r)/gm, " ").trim()}"`);
                csv.push(cols.join(","));
            });

            const blob = new Blob([csv.join("\n")], { type: "text/csv" });
            const link = document.createElement("a");
            link.href = URL.createObjectURL(blob);
            link.download = filename;
            link.click();
        }

        // Initialize default view
        showOPD();
    </script>
