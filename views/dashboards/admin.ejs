<!-- JavaScript -->
<script>
  // Section Navigation
  function showSection(sectionName) {
    const sections = document.querySelectorAll('.section-content');
    sections.forEach(section => section.classList.add('hidden'));
    
    document.getElementById(sectionName + '-section').classList.remove('hidden');
    
    // Update active sidebar link
    const links = document.querySelectorAll('.sidebar-link');
    links.forEach(link => link.classList.remove('active'));
    event.target.closest('.sidebar-link').classList.add('active');
  }

  // Dashboard Refresh
  function refreshDashboard() {
    document.getElementById('lastUpdated').textContent = 'Refreshing...';
    setTimeout(() => {
      location.reload();
    }, 500);
  }

  // Initialize Charts
  document.addEventListener('DOMContentLoaded', function() {
    initializeCharts();
    initializeMap();
    setupEmergencyAlertForm();
    updateLastUpdatedTime();
  });

  function initializeCharts() {
    // Disease Distribution Chart
    const diseaseCtx = document.getElementById('diseaseDistributionChart');
    if (diseaseCtx) {
      const diseaseData = <%- JSON.stringify(diseaseAnalytics.diseaseDistribution) %>;
      new Chart(diseaseCtx, {
        type: 'bar',
        data: {
          labels: diseaseData.map(d => d._id || 'Unknown'),
          datasets: [{
            label: 'Total Cases',
            data: diseaseData.map(d => d.totalCases),
            backgroundColor: '#1a5276',
          }, {
            label: 'Active Cases',
            data: diseaseData.map(d => d.currentActive),
            backgroundColor: '#e74c3c',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: { position: 'top' }
          },
          scales: {
            y: { beginAtZero: true }
          }
        }
      });
    }

    // Age Distribution Chart
    const ageCtx = document.getElementById('ageDistributionChart');
    if (ageCtx) {
      const ageData = <%- JSON.stringify(diseaseAnalytics.ageDistribution) %>;
      const ageLabels = ['0-12', '13-18', '19-35', '36-50', '51-65', '65+'];
      new Chart(ageCtx, {
        type: 'pie',
        data: {
          labels: ageLabels,
          datasets: [{
            data: ageData.map(d => d.count),
            backgroundColor: ['#3498db', '#9b59b6', '#1abc9c', '#f39c12', '#e74c3c', '#34495e']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: { position: 'right' }
          }
        }
      });
    }

    // Equipment Status Chart
    const equipCtx = document.getElementById('equipmentStatusChart');
    if (equipCtx) {
      const equipData = <%- JSON.stringify(infrastructureStatus.equipmentStatus) %>;
      new Chart(equipCtx, {
        type: 'doughnut',
        data: {
          labels: equipData.map(e => e._id.charAt(0).toUpperCase() + e._id.slice(1)),
          datasets: [{
            data: equipData.map(e => e.count),
            backgroundColor: ['#27ae60', '#f39c12', '#e74c3c']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: { position: 'bottom' }
          }
        }
      });
    }

    // Medicine Stock Chart
    const medCtx = document.getElementById('medicineStockChart');
    if (medCtx) {
      const medData = <%- JSON.stringify(infrastructureStatus.medicineStock) %>;
      new Chart(medCtx, {
        type: 'doughnut',
        data: {
          labels: medData.map(m => m._id.replace('_', ' ').toUpperCase()),
          datasets: [{
            data: medData.map(m => m.count),
            backgroundColor: ['#27ae60', '#f39c12', '#e74c3c']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: { position: 'bottom' }
          }
        }
      });
    }

    // Profile Completion Chart
    const profileCtx = document.getElementById('profileCompletionChart');
    if (profileCtx) {
      const profileData = <%- JSON.stringify(citizenMetrics.profileCompletion) %>;
      const completed = profileData.find(p => p._id === true)?.count || 0;
      const incomplete = profileData.find(p => p._id === false)?.count || 0;
      new Chart(profileCtx, {
        type: 'doughnut',
        data: {
          labels: ['Completed', 'Incomplete'],
          datasets: [{
            data: [completed, incomplete],
            backgroundColor: ['#27ae60', '#95a5a6']
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: { position: 'bottom' }
          }
        }
      });
    }
  }

  function initializeMap() {
    // Initialize Leaflet map centered on Solapur
    const map = L.map('wardMap').setView([17.6599, 75.9064], 12);
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: 'Â© OpenStreetMap contributors'
    }).addTo(map);

    // Fetch and display ward outbreak data
    fetch('/admin/api/map-data')
      .then(response => response.json())
      .then(data => {
        if (data.success && data.data.length > 0) {
          data.data.forEach(ward => {
            const coords = ward.location?.coordinates || [75.9064, 17.6599];
            const color = getSeverityColor(ward.severity);
            
            L.circleMarker([coords[1], coords[0]], {
              radius: Math.min(ward.totalCases * 2, 30),
              fillColor: color,
              color: color,
              weight: 2,
              opacity: 0.8,
              fillOpacity: 0.5
            }).addTo(map).bindPopup(`
              <div class="p-2">
                <div class="font-bold">${ward.ward}</div>
                <div class="text-sm">Cases: ${ward.totalCases}</div>
                <div class="text-sm">Outbreaks: ${ward.outbreaks}</div>
                <div class="text-sm">Severity: ${ward.severity}</div>
              </div>
            `);
          });
        }
      })
      .catch(error => console.error('Map data error:', error));
  }

  function getSeverityColor(severity) {
    switch(severity) {
      case 'Critical': return '#e74c3c';
      case 'High': return '#f39c12';
      case 'Medium': return '#f1c40f';
      default: return '#27ae60';
    }
  }

  function refreshMapData() {
    location.reload();
  }

  function setupEmergencyAlertForm() {
    const form = document.getElementById('emergencyAlertForm');
    const targetSelect = document.getElementById('alertTarget');
    const wardContainer = document.getElementById('wardSelectContainer');

    targetSelect.addEventListener('change', function() {
      if (this.value === 'ward') {
        wardContainer.classList.remove('hidden');
      } else {
        wardContainer.classList.add('hidden');
      }
    });

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const data = {
        title: document.getElementById('alertTitle').value,
        message: document.getElementById('alertMessage').value,
        priority: document.getElementById('alertPriority').value,
        targetAudience: document.getElementById('alertTarget').value,
        ward: document.getElementById('alertWard').value
      };

      try {
        const response = await fetch('/admin/api/emergency-alert', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        if (result.success) {
          alert('Emergency alert broadcast successfully!');
          form.reset();
        } else {
          alert('Failed to broadcast alert: ' + result.error);
        }
      } catch (error) {
        alert('Error broadcasting alert: ' + error.message);
      }
    });
  }

  function updateLastUpdatedTime() {
    const now = new Date();
    const timeString = now.toLocaleTimeString('en-IN', { 
      hour: '2-digit', 
      minute: '2-digit' 
    });
    document.getElementById('lastUpdated').textContent = timeString;
  }

  // Auto-refresh every 5 minutes
  setInterval(() => {
    updateLastUpdatedTime();
  }, 60000);

  // ==========================================
  // SURVEILLANCE ANALYTICS CHARTS
  // ==========================================
  
  // Store chart instances globally to prevent duplicates
  let surveillanceCharts = {
    trendChart: null,
    wardChart: null,
    demoChart: null,
    riskChart: null,
    spikeChart: null
  };
  let surveillanceChartsInitialized = false;

  function initializeSurveillanceCharts() {
    // Destroy existing charts first to prevent duplication
    Object.keys(surveillanceCharts).forEach(key => {
      if (surveillanceCharts[key]) {
        surveillanceCharts[key].destroy();
        surveillanceCharts[key] = null;
      }
    });

    // Data from server
    const diseaseTrends = <%- JSON.stringify(diseaseTrends || []) %>;
    const wardWiseData = <%- JSON.stringify(wardWiseData || []) %>;
    const demographicBreakdown = <%- JSON.stringify(demographicBreakdown || []) %>;
    const riskLevels = <%- JSON.stringify(riskLevels || {High: 0, Medium: 0, Safe: 0}) %>;
    const appointmentSpikes = <%- JSON.stringify(appointmentSpikes || []) %>;

    // Color schemes
    const diseaseColors = {
      'Dengue': '#e74c3c',
      'Malaria': '#9b59b6',
      'TB': '#34495e',
      'Viral Fever': '#f39c12',
      'Diabetes': '#3498db',
      'Typhoid': '#1abc9c',
      'Cholera': '#e67e22',
      'COVID-19': '#c0392b',
      'Other': '#95a5a6'
    };

    // 1. Disease Trend Line Chart
    const diseaseTrendsCtx = document.getElementById('diseaseTrendsChart').getContext('2d');
    chartInstances.diseaseTrends = new Chart(diseaseTrendsCtx, {
      type: 'line',
      data: {
        labels: [...new Set(diseaseTrends.flatMap(item => item.data.map(d => d.date)))].sort(),
        datasets: diseaseTrends.map(item => {
          const dates = item.data.map(d => d.date);
          const counts = item.data.map(d => d.count);
          
          return {
            label: item._id,
            data: counts,
            borderColor: diseaseColors[item._id] || '#95a5a6',
            backgroundColor: (diseaseColors[item._id] || '#95a5a6') + '20',
            borderWidth: 2,
            tension: 0.4,
            fill: true,
            pointRadius: 3,
            pointHoverRadius: 5
          };
        })
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: { y: { beginAtZero: true } }
      }
    });

    // 2. Ward-Wise Disease Bar Chart
    const wardCtx = document.getElementById('wardDiseaseChart').getContext('2d');
    chartInstances.wardDisease = new Chart(wardCtx, {
      type: 'bar',
      data: {
        labels: wardWiseData.map(w => w._id || 'Unknown'),
        datasets: [{
          label: 'Total Cases',
          data: wardWiseData.map(w => w.total),
          backgroundColor: 'rgba(26, 82, 118, 0.8)',
          borderColor: '#1a5276',
          borderWidth: 1,
          borderRadius: 6
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: { x: { beginAtZero: true } }
      }
    });

    // 3. Demographic Breakdown Chart
    const demoCtx = document.getElementById('demographicChart').getContext('2d');
    chartInstances.demoChart = new Chart(demoCtx, {
      type: 'bar',
      data: {
        labels: ['0-12', '13-25', '26-45', '46-60', '60+'],
        datasets: topDiseases.map(disease => {
          const data = ageGroups.map(age => {
            const ageData = demographicBreakdown.find(d => d._id === age);
            if (ageData) {
              const diseaseData = ageData.diseases.find(d => d.disease === disease);
              return diseaseData ? diseaseData.count : 0;
            }
            return 0;
          });
          
          return {
            label: disease,
            data: data,
            backgroundColor: diseaseColors[disease],
            borderRadius: 4
          };
        })
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: { y: { beginAtZero: true } }
      }
    });

    // 4. Risk Level Donut Chart
    const riskCtx = document.getElementById('riskLevelChart').getContext('2d');
    chartInstances.riskChart = new Chart(riskCtx, {
      type: 'doughnut',
      data: {
        labels: ['High Risk', 'Medium Risk', 'Safe'],
        datasets: [{
          data: [riskLevels.High || 0, riskLevels.Medium || 0, riskLevels.Safe || 0],
          backgroundColor: ['#e74c3c', '#f39c12', '#27ae60'],
          borderWidth: 0,
          hoverOffset: 10
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        cutout: '70%',
        plugins: {
          legend: { position: 'bottom', labels: { boxWidth: 12, padding: 15 } }
        }
      }
    });

    // 5. Appointment Spike Chart
    const spikeCtx = document.getElementById('appointmentSpikeChart').getContext('2d');
    chartInstances.symptomFrequency = new Chart(spikeCtx, {
      type: 'bar',
      data: {
        labels: spikeDates,
        datasets: [
          {
            label: 'Total Appointments',
            data: spikeCounts,
            backgroundColor: 'rgba(52, 152, 219, 0.7)',
            borderRadius: 4
          },
          {
            label: 'Critical Cases',
            data: criticalCounts,
            backgroundColor: 'rgba(231, 76, 60, 0.8)',
            borderRadius: 4
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: { y: { beginAtZero: true } }
      }
    });
  }

  // Surveillance Filter Functions
  function resetSurveillanceFilters() {
    document.getElementById('surveillanceFilterForm').reset();
    window.location.href = '/admin/dashboard';
  }

  document.getElementById('surveillanceFilterForm')?.addEventListener('submit', function(e) {
    e.preventDefault();
    const formData = new FormData(this);
    const params = new URLSearchParams();
    
    for (const [key, value] of formData.entries()) {
      if (value) params.append(key, value);
    }
    
    window.location.href = '/admin/dashboard?' + params.toString();
  });

  // Initialize surveillance charts after section switch
  const originalShowSection = showSection;
  showSection = function(sectionName) {
    originalShowSection(sectionName);
    if (sectionName === 'surveillance' && !surveillanceChartsInitialized) {
      setTimeout(() => {
        initializeSurveillanceCharts();
        surveillanceChartsInitialized = true;
      }, 100);
    }
  };
</script>

